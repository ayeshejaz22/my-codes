function makeCoffee(sugar, coffee, milk)
{
    var instructions = "1. Boil " + milk + " cup of milk. "; 
        instructions += "2. Add " + coffee + " tsp of coffee. "; 
        instructions += "3. Add " + sugar + " tsp of sugar. "; 
        instructions += "4. Serve!";
        return instructions;
}

console.log(makeCoffee(1, 1, 1));
